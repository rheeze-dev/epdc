@model src.Models.Organization
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Audit Trail";
    ApplicationUser appUser = await UserManager.GetUserAsync(User);
    Layout = "_LayoutAdminlteAdmin";
}
    <style>
        .btn-primary {
            background-color: #3c8dbc;
            border-color: #367fa9;
        }

        .btn-default:active, .btn-default.active, .open > .dropdown-toggle.btn-default {
    color: #333;
    background-color: #3c8dbc;
    border-color: #adadad;
}

        .btn-lg, .btn-group-lg > .btn {
            padding: 10px 16px;
            font-size: 14px;
            line-height: 1.8;
            border-radius: 6px;
        }

        .audit {
    border-left: 3px solid #3c8dbc;
    color: #ccc !important;
    background: #1e282c;
}
    </style>
<!-- Content Header (Page header) -->
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="box box-primary">
                <div class="box-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <a class="header btn-default btn-lg" href="@Url.Action("Index","AuditTrail")">Edited data</a> &nbsp;
                            <a class="header btn-default btn-lg active" href="@Url.Action("DeletedDatas","AuditTrail")">Deleted data</a>
                            <input type="hidden" asp-for="@Model.organizationId" />
                            <table id="grid" name="grid" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th class="col-md-1">Datetime deleted</th>
                                        @*<th class="col-md-1">Plate number</th>*@
                                        <th class="col-md-1">From</th>
                                        <th class="col-md-1">Name</th>
                                        <th class="col-md-1">Deleted by</th>
                                        <th class="col-md-1">Amount</th>
                                        <th class="col-md-1">Remarks</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>

</section>

